<div class="row">  
<div class="medium-6 medium-centered columns">
<h3>Creating product</h3>
<%= form_for :product, url: products_path do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :amount %>
    <%= f.number_field :amount %>
  </div>

  <div class="actions">
    <%= f.submit class: "button success" %>
  </div>
<% end %>
</div>
</div>